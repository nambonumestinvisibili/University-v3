<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KursWWW</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        #sidebar {
            z-index:1;
            position: fixed;
            top: 0;
            min-width: 165px;
            max-width: 165px;
            min-height: 100vh;
            box-shadow: 100px 100px 100px 100px black;
        }

        #sidebar ul li a {
                display: block;
                color: white;
                padding-top: 20px;
                font-size: 18px;
                text-decoration: none;
                padding-left: 10px;
                padding-bottom: 3px;
                border-bottom: solid 1px white;
                margin-left: 10px;
                margin-right: 18px;
         }

        #sidebar ul li a:hover {
                    background-color: lightgray;
                    padding-left: 15px;
                    color: black;
            }

        #sidebar ul li ul li a {
                margin-left: 25px;
                font-size: 15px;
            }

        .sidebar-header h3 {
            display: block;
            text-align: center;
            color: white;
            font-size: 45px;
            padding-top: 30px;
            padding-bottom: 40px;

        }

        #sidebarRight {
            position: fixed;
            top: 0;
            right: 0;
            width: 100px;
            min-height: 100vw;
            background-color: black;
            z-index: 1;
        }

        footer {
            padding-right:130px;
            margin-right: 300px;
            bottom: 0;
            width: 400px;
            text-align: right;
            border-top: solid 1px gray;
            padding-top:0px;
        }

        h1 {
            margin-left: 210px;
            margin-top: 30px;
        }

        renderer {
            margin-left: 160px;
            
        }
    </style>
</head>
    
<body>


    <div class="wrapper">
        
        <nav id="sidebar" class="bg-dark shadow">
            @*<div class="sidebar-header">
                <h3> </h3>
            </div>*@

            <ul class="list-unstyled components">
                <li>
                    <a asp-controller="Website" asp-action="Index">Home</a>
                </li>
                <li class="active">
                    <a href="#cardsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Cards</a>
                    <ul class="list-unstyled collapse" id="cardsSubmenu">
                        <li>
                            <a asp-controller="Website" asp-action="CreditCards">
                                Credit Cards
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Website" asp-action="AccountCards">
                                Account Cards
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="active">
                    <a href="#transfersSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Transfers</a>
                    <ul class="list-unstyled collapse" id="transfersSubmenu">
                        <li>
                            <a asp-controller="Website" asp-action="CountryTransfers">
                                Country Transfers
                            </a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a asp-controller="Website" asp-action="ListOfTransfers">List of transfers</a>
                </li>
            </ul>
        </nav>

        <div id="content">

        </div>

    </div>

    <h1>@ViewData["Title"]</h1>

    <div class="container renderer">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="footer text-muted">
        Created by Dawid Holewa
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


